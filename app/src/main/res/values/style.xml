<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BlueRoundedButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>
   <style name="blue_button">
        <item name="android:backgroundTint">#3AB0FF</item>
       <item name="android:shape">rectangle</item>
       <item name="cornerSize">30dp</item>
       <item name = "android:radius">30dp</item>
       <item name="color">@color/white</item>
    </style>
    <style name="normal_black_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="white_title">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="editText">
        <item name="hintTextColor">#9E9E9E</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="button_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="item_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="item_price">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_custom_1</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="item_discount">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_custom_2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="item_rating_avg">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="item_rating_count">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_custom_4</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="item_sold">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_custom_4</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">end</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

</resources>