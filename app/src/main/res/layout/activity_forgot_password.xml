<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.ForgotPasswordActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#3AB0FF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu?"
                android:textColor="@color/white"
                android:layout_weight="2"
                android:gravity="center"
                android:textAppearance="@style/white_title"/>

    </LinearLayout>

        <EditText
            android:id="@+id/edt_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email/Số điện thoại"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textAppearance="@style/editText"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lấy lại mật khẩu"
        android:background="@drawable/rounded_button"
        app:backgroundTint="#3AB0FF"
        android:layout_margin="30dp"
        android:layout_gravity="center" />
    <TextView
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset_forgot_password"
        android:textAppearance="@style/normal_black_text"
        android:gravity="center"/>

</LinearLayout>