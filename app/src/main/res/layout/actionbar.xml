<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_custom_blue">

    <ImageButton
        android:id="@+id/Back_Home"
        android:src="@drawable/ic_home_black_24dp"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="50dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <SearchView

        android:layout_height="45dp"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:id="@+id/text_appname"
        android:layout_toRightOf="@+id/Back_Home"
        android:layout_toLeftOf="@id/imv_setting_profile"
        android:background="@drawable/border_radius_pink" />

    <ImageButton
        android:id="@+id/imv_setting_profile"
        android:src="@drawable/profile_avatar"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="50dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

    </RelativeLayout>

