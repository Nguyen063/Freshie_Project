<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="20dp">
    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:text="Chỉnh sửa thông tin cá nhân"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="@drawable/shape_radius"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:background="@drawable/border_radius_pink"
        android:orientation="vertical"
        android:layout_gravity="center"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleX="2"
            android:scaleY="1"
            android:src="@drawable/line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Họ và tên"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edt_userName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/border_radius_gray_edt"
            android:hint="Nguyễn Thành Phát"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Email:"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edt_userEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/border_radius_gray_edt"
            android:hint="contact@gmail.com"
            android:paddingLeft="10dp" />



        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingBottom="5dp"
            android:text="Số điện thoại:"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edt_userPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/border_radius_gray_edt"
            android:hint="0321345678"
            android:paddingLeft="10dp" />
        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingBottom="5dp"
            android:text="Giới tính:"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rdg_Gender"

            >
            <RadioButton
                android:id="@+id/radio_Male"
                android:text="Nam"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                />

            <RadioButton
                android:id="@+id/radio_Female"
                android:text="Nữ"
                android:textSize="18sp"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp" />
            />

            <RadioButton
                android:id="@+id/radio_Other"
                android:text="Khác"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp" />
        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Địa chỉ:"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edt_userAddress"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/border_radius_gray_edt"
            android:hint="1A1, đường Nguyễn Ảnh Thủ, ấp Vạn Hạnh,xã Trung Chánh, huyện Hóc Môn, TP.HCM"
            android:paddingLeft="10dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            >
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:backgroundTint="@color/color_custom_blue"
                android:layout_gravity="center"
                android:layout_marginEnd="40dp"
                />
            <Button
                android:id="@+id/btn_save"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Lưu"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:backgroundTint="@color/color_custom_pink"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>