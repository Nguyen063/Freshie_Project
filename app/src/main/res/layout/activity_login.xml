<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#3AB0FF">


        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="250dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleY="0.8"
                android:scaleX="0.8"
                android:src="@drawable/logo"
                android:scaleType="centerCrop"/>


        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/tv_Signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng ký"
                android:textColor="@color/color_custom_light_gray"
                android:gravity="center"
                android:layout_weight="2"
                android:textSize="24sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <EditText
            android:id="@+id/edt_Account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email/ Số điện thoại"
            android:background="@drawable/border_radius_gray_edt"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textAppearance="@style/editText"/>

        <EditText
            android:id="@+id/edt_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:background="@drawable/border_radius_gray_edt"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textAppearance="@style/editText"/>
        <Button
            android:id="@+id/btn_Forget_Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:textColor="@color/color_custom_blue"
            android:backgroundTint="@color/white"
            android:textSize="15sp"
            android:padding="10dp"
            android:layout_gravity="right"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:background="@drawable/border_radius_pink"
            android:layout_gravity="center"
            app:backgroundTint="@color/color_custom_blue"
            android:layout_marginTop="20dp"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoặc"
            android:padding="10dp"
            android:textAppearance="@style/normal_black_text"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/google"
                android:layout_marginRight="30dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/facebook"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn chưa có tài khoản?"
                android:textAppearance="@style/normal_black_text"
                />
            <TextView
                android:id="@+id/tvRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký"
                android:textAppearance="@style/normal_black_text"
                android:textStyle="bold"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_Skip"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="@string/skip_login"
            android:background="@drawable/rounded_button"
            android:layout_gravity="center"
            app:backgroundTint="@color/color_custom_blue"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>