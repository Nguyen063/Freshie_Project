<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".account.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:backgroundTint="@color/white">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/profile_avatar"/>
                    android:layout_gravity="right">
                    <ImageButton
                        android:id="@+id/btn_cart"
                        android:src="@drawable/icon_cart"
                        android:background="?attr/actionBarItemBackground"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize" />


                    <ImageButton
                        android:id="@+id/btn_chatting"
                        android:background="?attr/actionBarItemBackground"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        android:src="@drawable/icon_chatting"
                        android:layout_marginRight="10dp"/>

                    <ImageButton
                        android:id="@+id/btn_Setting"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?attr/actionBarItemBackground"
                        android:src="@drawable/icon_settings"
                        android:layout_toRightOf="@id/btn_chatting"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Brooklyn Simmons"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:id="@+id/imv_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/editprofile"
                    android:layout_gravity="center"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    />


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="5dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="Đơn hàng"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:layout_marginEnd="120dp"
                    />
                <TextView
                    android:id="@+id/txt_vieworder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#9E9E9E"
                    android:text="Xem tất cả đơn hàng"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:gravity="right"
                    />
                <ImageView
                    android:id="@+id/imv_viewproduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/polygon2"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:scaleX="2"
                android:scaleY="1"
                />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:columnCount="4"
                android:rowCount="1"
                >
                <Button
                    android:id="@+id/btn_waitingconfirm"
                    android:layout_width="96dp"
                    android:layout_height="78dp"
                    android:text="Chờ xác nhận"
                    android:backgroundTint="@color/white"
                    android:textSize="8sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/icon_calendarcheck_" />
                <Button
                    android:id="@+id/btn_delivering"
                    android:layout_width="96dp"
                    android:layout_height="78dp"
                    android:text="Đang giao"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:textSize="8sp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/black"
                    android:drawableTop="@drawable/delivering"/>
                <Button
                    android:id="@+id/btn_delivered"
                    android:layout_width="96dp"
                    android:layout_height="78dp"
                    android:text="Đã giao"
                    android:backgroundTint="@color/white"
                    android:textSize="8sp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/delivered"/>
                <Button
                    android:id="@+id/btn_canceled"
                    android:layout_width="96dp"
                    android:layout_height="78dp"
                    android:text="Đã hủy"
                    android:backgroundTint="@color/white"
                    android:textSize="8sp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/black"
                    android:drawableTop="@drawable/canceled"/>
            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="5dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="Mã giảm giá"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:layout_marginEnd="100dp"
                    />
                <TextView
                    android:id="@+id/txt_viewvoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#9E9E9E"
                    android:text="Xem tất cả mã giảm"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:gravity="right"
                    />
                <ImageView
                    android:id="@+id/imv_viewvoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/polygon2"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:scaleX="2"
                android:scaleY="1"
                />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:orientation="horizontal"
                android:columnCount="3"
                android:rowCount="1"
                >
                <Button
                    android:id="@+id/btn_vichy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginEnd="3dp"
                    android:backgroundTint="@color/white"
                    android:drawableTop="@drawable/vichy"
                    android:text="Giảm 100k"
                    android:textColor="#F473B9"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_innisfree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GIẢM 30%"
                    android:backgroundTint="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="3dp"
                    android:textColor="#F473B9"
                    android:drawableTop="@drawable/innisfree"/>
                <Button
                    android:id="@+id/btn_senka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GIẢM 30K"
                    android:backgroundTint="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"
                    android:textColor="#F473B9"
                    android:drawableTop="@drawable/senka"/>
            </GridLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                >
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="HSD: 31/12/2022"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginStart="10dp"
                    />
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="HSD: 31/12/2022"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginStart="5dp"
                    />
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="HSD: 31/12/2022"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginStart="5dp"
                    />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="5dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="Mua lại"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:layout_marginEnd="75dp"
                    />
                <TextView
                    android:id="@+id/txt_view_buyed_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#9E9E9E"
                    android:text="Xem tất cả sản phẩm đã mua"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:gravity="right"
                    />
                <ImageView
                    android:id="@+id/imv_view_buyed_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/polygon2"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:scaleX="2"
                android:scaleY="1"
                />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:columnCount="3"
                android:rowCount="1"
                >
                <Button
                    android:id="@+id/btn_vitamintree"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:text="350.000"
                    android:textStyle="bold"
                    android:backgroundTint="@color/white"
                    android:textSize="18sp"
                    android:textColor="#F473B9"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:drawableTop="@drawable/vitamintree"
                    android:drawableRight="@drawable/vnd"
                    />
                <Button
                    android:id="@+id/btn_banobagi"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:text="180.000"
                    android:backgroundTint="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="3dp"
                    android:textColor="#F473B9"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/banobagi"
                    android:drawableRight="@drawable/vnd"/>
                <Button
                    android:id="@+id/btn_huxley"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:text="290.000"
                    android:backgroundTint="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"
                    android:textColor="#F473B9"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/huxley"
                    android:drawableRight="@drawable/vnd"/>
            </GridLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:id="@+id/ll_viewed_product">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/clock"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm đã xem"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/black_polygon3"
                    android:layout_gravity="center"
                    android:layout_marginStart="150dp"
                    />

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:scaleX="2"
                android:scaleY="1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:id="@+id/ll_myrating">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá của tôi"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/black_polygon3"
                    android:layout_gravity="center"
                    android:layout_marginStart="150dp"
                    />

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:scaleX="2"
                android:scaleY="1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:id="@+id/ll_settingprofile">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/user"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Thiết lập tài khoản"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="150dp"
                    android:src="@drawable/black_polygon3" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:scaleX="2"
                android:scaleY="1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:id="@+id/ll_helpcenter">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/info"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Trung tâm trợ giúp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/black_polygon3"
                    android:layout_gravity="center"
                    android:layout_marginStart="150dp"
                    />

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:scaleX="2"
                android:scaleY="1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:id="@+id/ll_log_out">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/share"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Log out"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/black_polygon3"
                    android:layout_gravity="center"
                    android:layout_marginStart="150dp"
                    />

            </LinearLayout>


        </LinearLayout>






    </LinearLayout>
</ScrollView>