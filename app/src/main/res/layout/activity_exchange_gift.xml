<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exchangegift.ExchangeGiftActivity"
    android:background="#F3F3F3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btn_myPoint"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_radius_pink"
                app:backgroundTint="#3AB0FF"
                android:text="Điểm của tôi"
                android:textSize="14dp"
                android:layout_marginEnd="15dp"
                />
            <Button
                android:id="@+id/btn_myVoucher"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_radius_pink"
                app:backgroundTint="#D9D9D9"
                android:text="Voucher của tôi"
                android:textSize="14dp"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/shape_radius">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="Bạn đang có"
                android:gravity="center" />
            <TextView
                android:id="@+id/txt_TotalPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="60sp"
                android:textColor="@color/white"
                android:text="300"
                android:textStyle="bold"
                android:gravity="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="điểm"
                android:gravity="center"
                />
        </LinearLayout>
        <ListView
            android:id="@+id/lv_voucher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"/>
    </LinearLayout>


</RelativeLayout>
