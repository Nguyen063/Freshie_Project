<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white">
<ImageView
    android:id="@+id/imv_voucherImage"
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:src="@drawable/vichy"
    android:layout_margin="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txt_voucherSale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GIẢM GIÁ"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#F473B9" />
        <TextView
            android:id="@+id/txt_voucherCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Điều kiện giảm giá"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_voucherTime"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="HSD: 31/12/2022"
                android:textSize="14sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_voucherPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:background="@drawable/border_radius_pink"
            android:text="250"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/color_custom_pink" />

    </LinearLayout>


</LinearLayout>