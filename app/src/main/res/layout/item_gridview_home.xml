<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_productHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/banner1"/>
        <TextView
            android:id="@+id/txt_ProductNameHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kem chống nắng"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">
            <TextView
                android:id="@+id/txt_ProductPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="19000"
                android:textSize="16sp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/color_custom_pink"/>
            <TextView
                android:id="@+id/txt_Discount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="-20%"
                android:textSize="16sp"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:textColor="@color/color_custom_blue"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="#FFE500"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_baseline_star_24"/>

            <TextView
                android:id="@+id/txt_RatingAverage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="4.9"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_RatingCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="(100)"
                android:textSize="16sp"
                android:textColor="@color/color_custom_light_gray"
                />
            <TextView
                android:id="@+id/txt_Sold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:text="1.8k Đã bán"
                android:textSize="16sp"
                android:textColor="@color/color_custom_light_gray"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>