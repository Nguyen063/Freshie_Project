<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.HomeFragment"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:background="@color/color_custom_blue">
    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/border_radius_pink"
        app:queryHint="Search"
        android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/btn_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_weight="5"
            android:src="@drawable/ic_baseline_shopping_cart_24"
            android:backgroundTint="#00000000"
            android:padding="2dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/slide_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:sliderAutoCycleDirection="left"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="4dp"
                app:sliderIndicatorRadius="1.5dp"
                app:sliderScrollTimeInSec="3"
                app:sliderStartAutoCycle="true"
                />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_margin="10dp">
                <TableRow>
                    <TextView
                        android:id="@+id/txt_deals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deals xịn"
                        android:drawableTop="@drawable/deals_xin"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/txt_freshnow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fresh Now"
                        android:drawableTop="@drawable/freshnow"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/txt_hignend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HighEnd"
                        android:drawableTop="@drawable/highend"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/txt_myvoucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MyVoucher"
                        android:drawableTop="@drawable/myvoucher"
                        android:gravity="center"/>
                </TableRow>
                <TableRow android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/txt_categories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Danh mục"
                        android:drawableTop="@drawable/categories"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/txt_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đơn hàng"
                        android:drawableTop="@drawable/order"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/txt_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tích điểm"
                        android:drawableTop="@drawable/point"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/txt_freeship"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FreeShip"
                        android:drawableTop="@drawable/freeship"
                        android:gravity="center"/>
                </TableRow>
            </TableLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_curve_white_bg"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FLASH SALE"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_custom_blue"
                        android:layout_margin="10dp" />
                    <TextView
                        android:id="@+id/txtCount_Down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/color_custom_pink"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:id="@+id/txt_viewFlashSale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem thêm >"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"/>
                </LinearLayout>



                <GridView
                    android:id="@+id/grid_flashSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:scrollbars="horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_curve_white_bg"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SẢN PHẨM MỚI NHẤT"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/color_custom_pink"
                        android:layout_margin="10dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/txt_viewNewest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem thêm >"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"/>
                </LinearLayout>
                <GridView
                    android:id="@+id/grid_newProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_curve_white_bg"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BEST SELLER"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/color_custom_pink"
                        android:layout_margin="10dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/txt_viewBestSeller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem thêm >"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"/>
                </LinearLayout>
                <GridView
                    android:id="@+id/grid_bestseller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:text="DÀNH CHO BẠN"
                android:padding="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/edt_curve_white_bg"
                android:textColor="@color/color_custom_pink"/>
            <GridView
                android:nestedScrollingEnabled="true"
                android:id="@+id/grid_forYou"
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:numColumns="2"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>