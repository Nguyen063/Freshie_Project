<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cart.CartFragment"
    android:orientation="vertical"
    android:background="#F3F3F3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_cart_product">
        <ListView
            android:id="@+id/lv_product_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp"
            android:background="@color/white">
        </ListView>
    </LinearLayout>
    <LinearLayout
        android:id="@id/ll_cart_product"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng thanh toán:"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã bao gồm VAT"
                android:textSize="14sp"
                android:textColor="#868484"
                android:paddingLeft="10dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_cart_totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="700.000"
            android:gravity="end"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:textColor="#3AB0FF"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btn_order"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ĐẶT HÀNG"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="#3AB0FF"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

</RelativeLayout>